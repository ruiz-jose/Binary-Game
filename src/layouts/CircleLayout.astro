---
import CircleAnimation from '../components/CircleAnimation.astro';
import Layout from './Layout.astro';

interface Props {
	background: string;
}
const { background } = Astro.props;
---

<Layout title="Circle" {background}>
	<CircleAnimation slot="head" />
	<slot />
</Layout>

<style is:global>
	body {
		cursor: pointer;
	}
	p {
		font-size: 2rem;
	}
</style>
